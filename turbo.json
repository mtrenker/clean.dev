{
  "$schema": "https://turborepo.org/schema.json",
  "globalEnv": [
    "NODE_ENV",
    "BLOG_ENDPOINT",
    "BLOG_TOKEN",
    "CDK_DEFAULT_ACCOUNT",
    "CDK_DEFAULT_REGION"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "ladle": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "dist/**"
      ]
    },
    "build:open": {
      "outputs": [
        ".open-next/**"
      ]
    },
    "build:ladle": {
      "outputs": [
        "ladle-build/**"
      ]
    },
    "synth": {
      "outputs": [
        "./cdk.out/**"
      ]
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": []
    }
  }
}