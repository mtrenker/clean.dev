# Example SealedSecret configuration
# Uncomment in kustomization.yaml when you need secrets
#
# To create this file:
# 1. Create a regular secret:
#    kubectl create secret generic clean-dev-secrets \
#      --from-literal=database-url="postgresql://user:pass@host:5432/db" \
#      --from-literal=api-key="your-api-key" \
#      --dry-run=client -o yaml | \
#      kubeseal -o yaml > k8s/sealedsecret.yaml
#
# 2. Uncomment the reference in kustomization.yaml
# 3. Uncomment the environment variables in deployment.yaml

apiVersion: bitnami.com/v1alpha1
kind: SealedSecret
metadata:
    name: clean-dev-secrets
    namespace: clean-dev
spec:
    encryptedData:
        # These will be generated by kubeseal
        # database-url: AgBy3i4OJSWK+PiTySYZZA9rO43cGDEQAM...
        # api-key: AgBy3i4OJSWK+PiTySYZZA9rO43cGDEQAM...
    template:
        type: Opaque
        metadata:
            name: clean-dev-secrets
            namespace: clean-dev
